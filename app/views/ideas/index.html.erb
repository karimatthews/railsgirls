<h1>Listing ideas</h1>

<% @ideas.in_groups_of(4) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-3">
        <%= link_to idea do %>
        <%= image_tag idea.picture_url, width: '100%' if idea.picture.present? %>
        <h4><%= idea.name %></h4>
        <%= idea.description %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
